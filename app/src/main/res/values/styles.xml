    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/black_overlay</item>
        <item name="android:windowNoDisplay">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SpnStyle">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#000000</item>
    </style>
    <style name="SpinnerStyle">
        <item name="colorAccent">#888888</item>
        <item name="colorControlNormal">@android:color/black</item> <!--改变了spinner的颜色  -->
    </style>

